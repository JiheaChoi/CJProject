<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CleanActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#B1230F">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:backgroundTint="#D4F4FA"
            app:srcCompat="@drawable/schooll" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/martel_sans_bold"
            android:text="청소신청게시판"
            android:textColor="@color/calendar_active_month_bg"
            android:textSize="30sp"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/lstContents"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </ListView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="22dp"
                android:background="@color/calendar_bg"
                android:clickable="true"
                app:backgroundTint="@color/calendar_bg"
                app:srcCompat="@drawable/pencils" />


        </FrameLayout>

    </LinearLayout>

</LinearLayout>